@using ProductManagementMVC.DTOs
@model ProductDTO

<h2>Products</h2>

<!-- Create Product Button -->
<a asp-action="Create" class="btn btn-primary mb-3">Create Product</a>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Id</th>
            <th>Product Code</th>
            <th>Product Name</th>
            <th>Picture</th>
            <th>Unit Price</th>
            <th>Quantity</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var product in Model.Products)
        {
            <tr>
                <td>@product.Id</td>
                <td>@product.ProductCode</td>
                <td>@product.ProductName</td>
                <td>
                    <img src="~/images/products/@product.Picture" alt="Product Image" style="width:50px;height:50px;" />
                </td>
                <td>@product.UnitPrice</td>
                <td>@product.Quantity</td>
                <td>
                    <!-- Edit Button -->
                    <a asp-action="Edit" asp-route-id="@product.Id" class="btn btn-warning btn-sm">Edit</a>

                    <!-- Delete Form -->
                    <form asp-action="Delete" asp-route-id="@product.Id" method="post" style="display:inline;">
                        <button type="submit" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure you want to delete this product?');">Delete</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>